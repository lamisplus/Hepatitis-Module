            ALTER TABLE hepatitis_diagnosis
                ADD CONSTRAINT hepatitis_diagnosis_hepatitis_enrollment_uuid_fk
                    FOREIGN KEY (hepatitis_enrollment_uuid) REFERENCES hepatitis_enrollments (uuid);
        </sql>
