    <changeSet failOnError="true" author="peter-data-fi" id="20230209-010">
        <preConditions onFail="MARK_RAN">
            <not>
                <columnExists tableName="hepatitis_diagnosis" columnName="enrollment_uuid" />
            </not>
        </preConditions>
        <addColumn tableName="hepatitis_diagnosis">
            <column name="enrollment_uuid" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        <addForeignKeyConstraint
                baseTableName="hepatitis_diagnosis"
                baseColumnNames="enrollment_uuid"
                constraintName="fk_hepatitis_diagnosis_enrollment"
                referencedTableName="hepatitis_enrollments"
                referencedColumnNames="uuid"
                onDelete="CASCADE"
                onUpdate="CASCADE"/>
    </changeSet>

    <changeSet failOnError="true" author="peter-data-fi" id="20230209-011">
        <preConditions onFail="MARK_RAN">
            <sqlCheck expectedResult="1">
                SELECT COUNT(*)
                FROM information_schema.table_constraints
                WHERE constraint_name = 'hepatitis_diagnosis_hepatitis_enrollments_fk_uuid'
                  AND table_name = 'hepatitis_diagnosis';
            </sqlCheck>
        </preConditions>
        <sql>
            ALTER TABLE hepatitis_diagnosis
            DROP CONSTRAINT hepatitis_diagnosis_hepatitis_enrollments_fk_uuid;
        </sql>
    </changeSet>
